<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.marksapp.MainActivity"
    android:background="@drawable/bg"
     >

    <TextView
        android:id="@+id/textView1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="learning app" />

    <Button
        android:id="@+id/btneasy"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/textView1"
        android:layout_below="@+id/textView1"
        android:onClick="onClick"
        android:text="Easy" />

    <Button
        android:id="@+id/btnmedium"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/btneasy"
        android:layout_below="@+id/btneasy"
        android:layout_marginTop="16dp"
        android:onClick="onClick"
        android:text="Medium" />

    <RadioGroup
        android:id="@+id/radioGroup1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/btnhard"
        android:layout_below="@+id/btnhard"
        android:layout_marginTop="65dp"
        android:orientation="vertical" >
    </RadioGroup>

    <Button
        android:id="@+id/btndbtest"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/radioGroup1"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:background="@drawable/greenbutton"
        android:onClick="onClick"
        android:text="Test DB"
        android:textColor="@color/white" />

    <RadioButton
        android:id="@+id/radiosubtract"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/btndbtest"
        android:layout_alignLeft="@+id/btndbtest"
        android:layout_alignRight="@+id/btndbtest"
        android:layout_marginBottom="15dp"
        android:text="Subtraction" />

    <RadioButton
        android:id="@+id/radioaddition"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/radiosubtract"
        android:layout_alignParentLeft="true"
        android:layout_alignParentRight="true"
        android:checked="true"
        android:text="Addition" />

    <Button
        android:id="@+id/btnhard"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/btnmedium"
        android:layout_marginTop="36dp"
        android:onClick="onClick"
        android:text="Hard" />

</RelativeLayout>
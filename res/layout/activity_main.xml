<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.marksapp.MainActivity" >

    <TextView
        android:id="@+id/textView1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="learning app" />

    <Button
        android:id="@+id/btneasy"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/textView1"
        android:layout_below="@+id/textView1"
        android:onClick="onClick"
        android:text="Easy" />

    <Button
        android:id="@+id/btnmedium"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/btneasy"
        android:layout_below="@+id/btneasy"
        android:layout_marginTop="16dp"
        android:onClick="onClick"
        android:text="Medium" />

    <Button
        android:id="@+id/btnhard"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/btnmedium"
        android:layout_below="@+id/btnmedium"
        android:layout_marginTop="31dp"
        android:onClick="onClick"
        android:text="Hard" />

</RelativeLayout>